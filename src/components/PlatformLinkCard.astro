---
import type { PlatformItem } from '../data/platforms';

interface Props {
  platform: PlatformItem;
}

const { platform } = Astro.props;
---

{
  platform.isConfigured ? (
    <a class="platform-card" href={platform.url} target="_blank" rel="noreferrer" aria-label={`${platform.title}を開く`}>
      <div class="card-head">
        <h2>{platform.title}</h2>
        <span class="state-badge is-ok">リンクあり</span>
      </div>

      <div class="description-list">
        {platform.descriptionParagraphs.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </div>

      <p class="url-text">{platform.url}</p>
    </a>
  ) : (
    <article class="platform-card is-disabled" aria-label={`${platform.title} URL未設定`}>
      <div class="card-head">
        <h2>{platform.title}</h2>
        <span class="state-badge is-missing">URL未設定</span>
      </div>

      <div class="description-list">
        {platform.descriptionParagraphs.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </div>

      <p class="url-text">{platform.url}</p>
    </article>
  )
}

<style>
  .platform-card {
    display: grid;
    gap: 0.7rem;
    padding: 1rem;
    border-radius: var(--radius-md);
    border: 1px solid rgba(196, 220, 244, 0.26);
    background: linear-gradient(140deg, rgba(255, 255, 255, 0.11), rgba(255, 255, 255, 0.03));
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.46), 0 0 18px rgba(137, 234, 255, 0.1);
    color: inherit;
    text-decoration: none;
    transition: transform 0.15s ease, border-color 0.15s ease, box-shadow 0.15s ease;
  }

  a.platform-card:hover {
    transform: translateY(-2px);
    border-color: rgba(190, 228, 255, 0.48);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.5), 0 0 22px rgba(137, 234, 255, 0.17);
  }

  .platform-card.is-disabled {
    opacity: 0.82;
    cursor: default;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.35);
  }

  .card-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  h2 {
    margin: 0;
    font-size: clamp(1.2rem, 2.5vw, 1.55rem);
  }

  .state-badge {
    display: inline-flex;
    align-items: center;
    height: 1.65rem;
    padding: 0 0.65rem;
    border-radius: 999px;
    font-size: 0.76rem;
    letter-spacing: 0.06em;
    border: 1px solid transparent;
  }

  .state-badge.is-ok {
    color: #ddf8ef;
    border-color: rgba(126, 232, 181, 0.45);
    background: rgba(42, 123, 93, 0.32);
  }

  .state-badge.is-missing {
    color: #ffd5d7;
    border-color: rgba(255, 153, 159, 0.45);
    background: rgba(93, 30, 36, 0.36);
  }

  .description-list {
    display: grid;
    gap: 0.4rem;
  }

  .description-list p {
    margin: 0;
    line-height: 1.75;
    color: #deebf9;
    font-size: 0.96rem;
  }

  .url-text {
    margin: 0;
    color: #9dc2e2;
    font-size: 0.78rem;
    word-break: break-all;
  }
</style>
