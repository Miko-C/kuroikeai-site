---
import Layout from '../layouts/Layout.astro';
import PlatformLinkCard from '../components/PlatformLinkCard.astro';
import { platforms } from '../data/platforms';
import { site } from '../config/site';

const linksBackground = '/visuals/home.png';
const accentCat = '/visuals/blackcatgreeting.png';
const accentDog = '/visuals/dog-handsup.png';
---

<Layout title={`${site.title} | Links`} description="公式リンク一覧と説明">
  <section class="links-panel" style={`background-image: url('${linksBackground}')`} aria-label="リンク一覧セクション">
    <img class="accent accent-cat" src={accentCat} alt="" aria-hidden="true" loading="lazy" />
    <img class="accent accent-dog" src={accentDog} alt="" aria-hidden="true" loading="lazy" />

    <div class="panel-overlay">
      <p class="eyebrow">Official Links</p>
      <h1>Links</h1>
      <p class="lead">
        各プラットフォームの役割と最新導線をまとめています。
      </p>

      <article class="platform-card contact-card" aria-label="お問い合わせ">
        <div class="card-head">
          <h2>お問い合わせ</h2>
          <span class="state-badge is-ok">連絡先</span>
        </div>

        <div class="description-list">
          <p>お問い合わせ（お仕事・コラボ・案件等）は下記の連絡先にて承っております。</p>
          <p>
            連絡先：
            <a class="contact-mail" href="mailto:kuroikeai.contact@gmail.com">kuroikeai.contact@gmail.com</a>
          </p>
        </div>
      </article>

      <div class="cards-stack" aria-label="プラットフォームカード一覧">
        {platforms.map((platform) => (
          <PlatformLinkCard platform={platform} />
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .links-panel {
    position: relative;
    border-radius: var(--radius-lg);
    border: 1px solid rgba(191, 219, 244, 0.28);
    overflow: hidden;
    background-size: cover;
    background-position: center;
    box-shadow: 0 14px 36px rgba(0, 0, 0, 0.52), 0 0 22px rgba(137, 234, 255, 0.13);
  }

  .accent {
    position: absolute;
    z-index: 1;
    pointer-events: none;
    filter: drop-shadow(0 10px 24px rgba(0, 0, 0, 0.45));
  }

  .accent-cat {
    top: 1rem;
    right: 1rem;
    width: min(240px, 34vw);
    opacity: 0.8;
  }

  .accent-dog {
    bottom: 1rem;
    left: 1rem;
    width: min(220px, 30vw);
    opacity: 0.72;
  }

  .panel-overlay {
    position: relative;
    z-index: 2;
    min-height: clamp(520px, 72vh, 980px);
    padding: clamp(1.1rem, 4vw, 2rem);
    display: grid;
    align-content: start;
    gap: 0.9rem;
    background: linear-gradient(to bottom, rgba(4, 7, 12, 0.78), rgba(4, 7, 12, 0.62));
  }

  .eyebrow {
    margin: 0;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #d4e5f7;
    font-size: 0.78rem;
  }

  h1 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3.2rem);
    letter-spacing: 0.03em;
  }

  .lead {
    margin: 0;
    max-width: 52rem;
    line-height: 1.8;
    color: #ddedfb;
  }

  .cards-stack {
    margin-top: 0.3rem;
    display: grid;
    gap: 0.9rem;
  }

  .platform-card {
    display: grid;
    gap: 0.7rem;
    padding: 1rem;
    border-radius: var(--radius-md);
    border: 1px solid rgba(196, 220, 244, 0.34);
    background: rgba(10, 16, 24, 0.34);
    backdrop-filter: blur(8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.34), 0 0 12px rgba(137, 234, 255, 0.1);
    color: inherit;
    text-decoration: none;
  }

  .contact-card {
    margin-top: 0.35rem;
  }

  .card-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  h2 {
    margin: 0;
    font-size: clamp(1.2rem, 2.5vw, 1.55rem);
  }

  .state-badge {
    display: inline-flex;
    align-items: center;
    height: 1.65rem;
    padding: 0 0.65rem;
    border-radius: 999px;
    font-size: 0.76rem;
    letter-spacing: 0.06em;
    border: 1px solid transparent;
  }

  .state-badge.is-ok {
    color: #ddf8ef;
    border-color: rgba(126, 232, 181, 0.45);
    background: rgba(42, 123, 93, 0.25);
  }

  .description-list {
    display: grid;
    gap: 0.4rem;
  }

  .description-list p {
    margin: 0;
    line-height: 1.75;
    color: #deebf9;
    font-size: 0.96rem;
  }

  .contact-mail {
    color: #9dc2e2;
    font-size: 0.96rem;
    word-break: break-all;
    text-decoration: none;
  }

  .contact-mail:hover {
    color: #c3def3;
  }

  @media (max-width: 720px) {
    .accent-cat {
      width: min(170px, 36vw);
      top: 0.6rem;
      right: 0.5rem;
      opacity: 0.66;
    }

    .accent-dog {
      width: min(145px, 34vw);
      left: 0.5rem;
      bottom: 0.5rem;
      opacity: 0.58;
    }
  }
</style>
